@model IEnumerable<OnlineBooksStore.Models.Book>

@{
    ViewBag.Title = "Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Books</h2>
<p>
    @Html.ActionLink("New Book","New","Books",null,new { @class ="btn btn-primary"})
</p>

  <table id="books" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Books</th>
            <th>Genre</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @*@foreach (var book in Model)
        {
            <tr>
                <td>@Html.ActionLink(book.Name, "Edit", "Books", new { id = book.Id }, null)</td>
                <td>@book.Genre.Name</td>
           </tr>
        }*@

    </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {

            var table = $("#books").DataTable(
                {
                    ajax: {
                        url: "api/books",
                        dataSrc: ""
                    },
                    columns: [
                        {
                            data: "name",
                            render: function (data, type, book) {
                                return "<a href='/books/edit/" + book.id + "'>" + book.name + "</a>";
                            }
                        },
                        {
                            data: "genre.name"
                        },
                        {
                            data: "id",
                            render: function (data) {
                                return "<button class='btn-link js-delete' data-book-id=" + data + ">Delete</button>";
                            }
                        }
                    ]
                });

            $("#books").on("click", ".js-delete", function () {
                var button = $(this);


                bootbox.confirm("Are you sure you want to delete this Book?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/books/" + button.attr("data-book-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }

                });

            });
        });
    </script>
    
}
